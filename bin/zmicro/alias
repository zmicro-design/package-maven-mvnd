#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro maven-mvnd <args ...>"
  echo ""

  if [ -z "$JAVA_HOME" ]; then
    log::info "You should set env JAVA_HOME"
    return 0
  elif [ -z "$MAVEN_HOME" ]; then
    log::info "You should set env MAVEN_HOME"
    return 0
  elif [ -z "$MVND_HOME" ]; then
    log::info "You should set env MVND_HOME"
    return 0
  fi

  mvnd --help
}

version() {
  # mvnd --version
  echo "v1.0.0-m1"
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    mvnd "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
